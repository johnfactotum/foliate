            <property name="margin-bottom">6</property>
            <property name="spacing">6</property>
            <property name="hexpand">True</property>
            <child>
              <object class="GtkButton">
                <property name="visible">True</property>
                <property name="action-name">opds.home</property>
                <property name="tooltip-text" translatable="yes">Go to start page</property>
                <property name="hexpand">True</property>
                <child>
                  <object class="GtkImage">
                    <property name="visible">True</property>
                    <property name="icon-name">go-home-symbolic</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkButton">
                <property name="visible">True</property>
                <property name="action-name">opds.reload</property>
