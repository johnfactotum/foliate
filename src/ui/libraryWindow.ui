<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <menu id="menu">
    <section>
      <item>
        <attribute name="action">app.open</attribute>
        <attribute name="label" translatable="yes">Open Book…</attribute>
      </item>
      <item>
        <attribute name="action">app.open-opds</attribute>
        <attribute name="label" translatable="yes">Open Catalog…</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="action">lib.add-files</attribute>
        <attribute name="label" translatable="yes">Add Books…</attribute>
      </item>
      <item>
        <attribute name="action">lib.add-catalog</attribute>
        <attribute name="label" translatable="yes">Add Catalog…</attribute>
      </item>
